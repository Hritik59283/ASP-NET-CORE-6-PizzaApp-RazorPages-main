@page
@model RazorPizzeria.Pages.OrdersModel
@{
}

<h3>Orders</h3>

<hr />

<table class="table" style="border-block:groove" >
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Pizza Name
			</th>
			<th>
				Price
			</th>
		</tr>
	</thead>
	<tbody>

		@foreach(var order in Model.PizzaOrders){
			<tr>
				<td>
					@order.Id
				</td>

				<td>
					@order.PizzaName
				</td>

				<td>
					@order.BasePrice
				</td>
			</tr>
		}


	</tbody>
</table>
